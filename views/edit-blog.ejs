<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>Edit: <%= blog.title %> - Blogify</title>
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }

        .edit-container {
            padding: 40px 0 80px;
        }

        .edit-header {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            margin-bottom: 30px;
            text-align: center;
        }

        .edit-badge {
            display: inline-block;
            background: linear-gradient(135deg, #17a2b8, #20c997);
            color: #ffffff;
            padding: 8px 20px;
            border-radius: 25px;
            font-size: 0.9rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 20px;
        }

        .edit-title {
            font-size: 2rem;
            font-weight: 700;
            color: #ffffff;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            margin-bottom: 15px;
        }

        .edit-actions {
            display: flex;
            gap: 15px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .action-btn {
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 25px;
            padding: 12px 25px;
            color: #ffffff;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .action-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            color: #ffffff;
            transform: translateY(-2px);
        }

        .btn-preview {
            background: linear-gradient(135deg, #667eea, #764ba2);
        }

        .btn-back {
            background: linear-gradient(135deg, #6c757d, #495057);
        }

        .edit-form {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            padding: 40px;
        }

        .form-section {
            margin-bottom: 30px;
        }

        .form-section:last-child {
            margin-bottom: 0;
        }

        .section-title {
            font-size: 1.3rem;
            font-weight: 600;
            color: #2d3748;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            font-weight: 600;
            color: #374151;
            margin-bottom: 8px;
            font-size: 0.95rem;
        }

        .form-input, .form-textarea, .form-select {
            width: 100%;
            border: 2px solid #e5e7eb;
            border-radius: 10px;
            padding: 12px 16px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: #ffffff;
            box-sizing: border-box;
        }

        .form-input:focus, .form-textarea:focus, .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            outline: none;
        }

        .form-textarea {
            resize: vertical;
            min-height: 120px;
        }

        .content-editor {
            min-height: 400px;
            font-family: 'Georgia', serif;
            line-height: 1.6;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        .form-checkbox-group {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 15px;
            background: #f8fafc;
            border-radius: 10px;
            border: 2px solid #e5e7eb;
            transition: all 0.3s ease;
        }

        .form-checkbox-group:hover {
            border-color: #667eea;
        }

        .form-checkbox {
            width: 20px;
            height: 20px;
            accent-color: #667eea;
        }

        .checkbox-label {
            font-weight: 600;
            color: #374151;
            margin: 0;
            cursor: pointer;
        }

        .checkbox-description {
            font-size: 0.9rem;
            color: #6b7280;
            margin: 0;
        }

        .form-buttons {
            display: flex;
            gap: 15px;
            justify-content: flex-end;
            margin-top: 40px;
            flex-wrap: wrap;
        }

        .btn {
            padding: 12px 30px;
            border-radius: 25px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            font-size: 1rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: #ffffff;
        }

        .btn-success {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: #ffffff;
        }

        .btn-secondary {
            background: linear-gradient(135deg, #6c757d, #495057);
            color: #ffffff;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

        .form-help {
            font-size: 0.85rem;
            color: #6b7280;
            margin-top: 5px;
        }

        .emoji-picker {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            margin-top: 10px;
        }

        .emoji-option {
            width: 40px;
            height: 40px;
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            cursor: pointer;
            transition: all 0.3s ease;
            background: #ffffff;
        }

        .emoji-option:hover, .emoji-option.selected {
            border-color: #667eea;
            background: #f0f4ff;
        }

        .preview-section {
            background: #f8fafc;
            border: 2px solid #e5e7eb;
            border-radius: 10px;
            padding: 20px;
            margin-top: 20px;
        }

        .preview-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: #374151;
            margin-bottom: 10px;
        }

        .preview-content {
            color: #6b7280;
            line-height: 1.6;
        }

        .word-count {
            font-size: 0.8rem;
            color: #6b7280;
            text-align: right;
            margin-top: 5px;
        }

        .character-limit {
            color: #dc3545;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .edit-title {
                font-size: 1.6rem;
            }

            .edit-form {
                padding: 20px;
            }

            .form-row {
                grid-template-columns: 1fr;
            }

            .form-buttons {
                justify-content: center;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }

            .edit-actions {
                flex-direction: column;
                align-items: center;
            }

            .action-btn {
                width: 200px;
                justify-content: center;
            }
        }

        @media (max-width: 576px) {
            .edit-container {
                padding: 20px 0 40px;
            }

            .emoji-picker {
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <%- include("./partials/nav") %>

    <div class="edit-container">
        <div class="container">
            <!-- Edit Header -->
            <div class="edit-header">
                <div class="edit-badge">‚úèÔ∏è Edit Blog</div>
                <h1 class="edit-title">Edit Your Blog Post</h1>
                <div class="edit-actions">
                    <a href="/user/blog/preview/<%= blog._id %>" class="action-btn btn-preview" target="_blank">
                        üëÅÔ∏è Preview
                    </a>
                    <a href="/user/my-blogs" class="action-btn btn-back">
                        ‚Üê Back to Dashboard
                    </a>
                </div>
            </div>

            <!-- Edit Form -->
            <form class="edit-form" action="/user/edit-blog/<%= blog._id %>" method="POST">
                <!-- Basic Information -->
                <div class="form-section">
                    <h2 class="section-title">üìù Basic Information</h2>
                    
                    <div class="form-group">
                        <label for="title" class="form-label">Blog Title *</label>
                        <input 
                            type="text" 
                            id="title" 
                            name="title" 
                            class="form-input" 
                            value="<%= blog.title %>" 
                            required 
                            placeholder="Enter your blog title..."
                            maxlength="100"
                        />
                        <div class="form-help">This will be the main headline of your blog post</div>
                        <div class="word-count" id="titleCount">
                            <span id="titleLength"><%= blog.title.length %></span>/100 characters
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="expert" class="form-label">Blog Excerpt *</label>
                        <textarea 
                            id="expert" 
                            name="expert" 
                            class="form-textarea" 
                            required 
                            placeholder="Write a brief summary of your blog post..."
                            maxlength="300"
                        ><%= blog.expert %></textarea>
                        <div class="form-help">A short description that appears in blog previews and search results</div>
                        <div class="word-count" id="expertCount">
                            <span id="expertLength"><%= blog.expert.length %></span>/300 characters
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="category" class="form-label">Category</label>
                            <select id="category" name="category" class="form-select">
                                <option value="">Select a category</option>
                                <option value="Technology" <%= blog.category === 'Technology' ? 'selected' : '' %>>Technology</option>
                                <option value="Lifestyle" <%= blog.category === 'Lifestyle' ? 'selected' : '' %>>Lifestyle</option>
                                <option value="Travel" <%= blog.category === 'Travel' ? 'selected' : '' %>>Travel</option>
                                <option value="Food" <%= blog.category === 'Food' ? 'selected' : '' %>>Food</option>
                                <option value="Health" <%= blog.category === 'Health' ? 'selected' : '' %>>Health</option>
                                <option value="Business" <%= blog.category === 'Business' ? 'selected' : '' %>>Business</option>
                                <option value="Education" <%= blog.category === 'Education' ? 'selected' : '' %>>Education</option>
                                <option value="Entertainment" <%= blog.category === 'Entertainment' ? 'selected' : '' %>>Entertainment</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="tags" class="form-label">Tags</label>
                            <input 
                                type="text" 
                                id="tags" 
                                name="tags" 
                                class="form-input" 
                                value="<%= blog.tags ? blog.tags.join(', ') : '' %>" 
                                placeholder="Enter tags separated by commas..."
                            />
                            <div class="form-help">Separate tags with commas (e.g., tech, programming, web)</div>
                        </div>
                    </div>
                </div>

                <!-- Blog Image -->
                <div class="form-section">
                    <h2 class="section-title">üñºÔ∏è Blog Image</h2>
                    
                    <div class="form-group">
                        <label for="image" class="form-label">Blog Emoji/Icon</label>
                        <input 
                            type="text" 
                            id="image" 
                            name="image" 
                            class="form-input" 
                            value="<%= blog.image %>" 
                            placeholder="Choose an emoji or enter text..."
                        />
                        <div class="form-help">Select an emoji to represent your blog post</div>
                        
                        <div class="emoji-picker">
                            <div class="emoji-option" data-emoji="üìù">üìù</div>
                            <div class="emoji-option" data-emoji="üíª">üíª</div>
                            <div class="emoji-option" data-emoji="üöÄ">üöÄ</div>
                            <div class="emoji-option" data-emoji="üéØ">üéØ</div>
                            <div class="emoji-option" data-emoji="üí°">üí°</div>
                            <div class="emoji-option" data-emoji="üî•">üî•</div>
                            <div class="emoji-option" data-emoji="‚≠ê">‚≠ê</div>
                            <div class="emoji-option" data-emoji="üåü">üåü</div>
                            <div class="emoji-option" data-emoji="üìö">üìö</div>
                            <div class="emoji-option" data-emoji="üé®">üé®</div>
                            <div class="emoji-option" data-emoji="üçï">üçï</div>
                            <div class="emoji-option" data-emoji="‚úàÔ∏è">‚úàÔ∏è</div>
                        </div>
                    </div>
                </div>

                <!-- Blog Content -->
                <div class="form-section">
                    <h2 class="section-title">üìÑ Blog Content</h2>
                    
                    <div class="form-group">
                        <label for="content" class="form-label">Blog Content *</label>
                        <textarea 
                            id="content" 
                            name="content" 
                            class="form-textarea content-editor" 
                            required 
                            placeholder="Write your blog content here..."
                        ><%= blog.content %></textarea>
                        <div class="form-help">Write your full blog post content here. You can use HTML formatting if needed.</div>
                        <div class="word-count" id="contentCount">
                            <span id="contentWords">0</span> words | <span id="contentChars">0</span> characters
                        </div>
                    </div>
                </div>

                <!-- Publishing Options -->
                <div class="form-section">
                    <h2 class="section-title">üöÄ Publishing Options</h2>
                    
                    <div class="form-group">
                        <div class="form-checkbox-group">
                            <input 
                                type="checkbox" 
                                id="published" 
                                name="published" 
                                class="form-checkbox"
                                <%= blog.published ? 'checked' : '' %>
                            />
                            <div>
                                <label for="published" class="checkbox-label">Publish this blog post</label>
                                <p class="checkbox-description">Make this blog post visible to everyone. Uncheck to save as draft.</p>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="author" class="form-label">Author Name</label>
                        <input 
                            type="text" 
                            id="author" 
                            name="author" 
                            class="form-input" 
                            value="<%= blog.author %>" 
                            placeholder="Enter author name..."
                        />
                        <div class="form-help">This will be displayed as the blog post author</div>
                    </div>
                </div>

                <!-- Form Buttons -->
                <div class="form-buttons">
                    <a href="/user/see-blog" class="btn btn-secondary">
                        ‚Üê Cancel
                    </a>
                    <button type="button" class="btn btn-primary" onclick="saveAsDraft()">
                        üíæ Save as Draft
                    </button>
                    <button type="submit" class="btn btn-success">
                        üöÄ Update & Publish
                    </button>
                </div>
            </form>
        </div>
    </div>

    <%- include("./partials/script") %>

    <script>
        // Character counting for title
        const titleInput = document.getElementById('title');
        const titleLength = document.getElementById('titleLength');
        const titleCount = document.getElementById('titleCount');

        titleInput.addEventListener('input', function() {
            const length = this.value.length;
            titleLength.textContent = length;
            
            if (length > 80) {
                titleCount.classList.add('character-limit');
            } else {
                titleCount.classList.remove('character-limit');
            }
        });

        // Character counting for excerpt
        const expertInput = document.getElementById('expert');
        const expertLength = document.getElementById('expertLength');
        const expertCount = document.getElementById('expertCount');

        expertInput.addEventListener('input', function() {
            const length = this.value.length;
            expertLength.textContent = length;
            
            if (length > 250) {
                expertCount.classList.add('character-limit');
            } else {
                expertCount.classList.remove('character-limit');
            }
        });

        // Word and character counting for content
        const contentInput = document.getElementById('content');
        const contentWords = document.getElementById('contentWords');
        const contentChars = document.getElementById('contentChars');

        function updateContentCount() {
            const text = contentInput.value;
            const words = text.trim() === '' ? 0 : text.trim().split(/\s+/).length;
            const chars = text.length;
            
            contentWords.textContent = words;
            contentChars.textContent = chars;
        }

        contentInput.addEventListener('input', updateContentCount);

        // Initialize content count
        updateContentCount();

        // Emoji picker functionality
        const emojiOptions = document.querySelectorAll('.emoji-option');
        const imageInput = document.getElementById('image');

        emojiOptions.forEach(option => {
            option.addEventListener('click', function() {
                const emoji = this.dataset.emoji;
                imageInput.value = emoji;
                
                // Update selection visual
                emojiOptions.forEach(opt => opt.classList.remove('selected'));
                this.classList.add('selected');
            });
        });

        // Set initial selected emoji
        const currentEmoji = imageInput.value;
        emojiOptions.forEach(option => {
            if (option.dataset.emoji === currentEmoji) {
                option.classList.add('selected');
            }
        });

        // Save as draft function
        function saveAsDraft() {
            const publishedCheckbox = document.getElementById('published');
            publishedCheckbox.checked = false;
            
            // Submit the form
            document.querySelector('.edit-form').submit();
        }

        // Form validation
        document.querySelector('.edit-form').addEventListener('submit', function(e) {
            const title = document.getElementById('title').value.trim();
            const expert = document.getElementById('expert').value.trim();
            const content = document.getElementById('content').value.trim();
            
            if (!title || !expert || !content) {
                e.preventDefault();
                alert('Please fill in all required fields (Title, Excerpt, and Content).');
                return false;
            }
            
            if (title.length > 100) {
                e.preventDefault();
                alert('Title must be 100 characters or less.');
                return false;
            }
            
            if (expert.length > 300) {
                e.preventDefault();
                alert('Excerpt must be 300 characters or less.');
                return false;
            }
            
            return true;
        });

        // Auto-save functionality (optional)
        let autoSaveTimeout;
        const formInputs = document.querySelectorAll('.form-input, .form-textarea, .form-select, .form-checkbox');
        
        formInputs.forEach(input => {
            input.addEventListener('input', function() {
                clearTimeout(autoSaveTimeout);
                autoSaveTimeout = setTimeout(() => {
                    // Auto-save logic here if needed
                    console.log('Auto-saving...');
                }, 30000); // Save after 30 seconds of inactivity
            });
        });

        // Confirm before leaving if there are unsaved changes
        let formChanged = false;
        formInputs.forEach(input => {
            input.addEventListener('change', function() {
                formChanged = true;
            });
        });

        window.addEventListener('beforeunload', function(e) {
            if (formChanged) {
                e.preventDefault();
                e.returnValue = '';
                return 'You have unsaved changes. Are you sure you want to leave?';
            }
        });

        // Remove the beforeunload listener when form is submitted
        document.querySelector('.edit-form').addEventListener('submit', function() {
            formChanged = false;
        });
    </script>
</body>
</html>